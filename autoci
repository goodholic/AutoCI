#!/usr/bin/env python3
"""
AutoCI 전역 실행 스크립트
"""
import sys
import os
from pathlib import Path

# AutoCI 디렉토리 경로 찾기
autoci_dir = Path(__file__).parent.resolve()

# Python 경로에 추가
sys.path.insert(0, str(autoci_dir))

# 작업 디렉토리 변경
os.chdir(autoci_dir)

# autoci.py 실행
from autoci import main

if __name__ == "__main__":
    main()