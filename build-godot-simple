#!/usr/bin/env python3
"""
간단한 Godot Windows exe 빌드/다운로드 스크립트
"""
import os
import sys
from pathlib import Path

# 색상 코드
GREEN = '\033[92m'
YELLOW = '\033[93m'
RED = '\033[91m'
BLUE = '\033[94m'
RESET = '\033[0m'

def main():
    print(f"\n{BLUE}🤖 AutoCI - Godot Windows 빌드{RESET}")
    print("=" * 50)
    
    project_dir = Path(__file__).parent.resolve()
    output_dir = project_dir / "godot_ai_build" / "output"
    output_dir.mkdir(parents=True, exist_ok=True)
    
    exe_path = output_dir / "godot.windows.editor.x86_64.exe"
    
    # 이미 있는지 확인
    if exe_path.exists():
        print(f"{GREEN}✅ Windows Godot이 이미 존재합니다!{RESET}")
        print(f"📍 경로: {exe_path}")
        return 0
    
    print(f"{YELLOW}⚠️  Windows Godot exe가 아직 없습니다.{RESET}")
    print()
    print("다음 방법 중 하나를 선택하세요:")
    print()
    print("1. 수동 다운로드:")
    print(f"   - URL: https://godotengine.org/download/windows/")
    print(f"   - 다운로드 후 다음 경로에 저장: {exe_path}")
    print()
    print("2. 네트워크가 안정적일 때 다시 시도:")
    print("   - python3 build-godot")
    print()
    print("3. Linux 버전 사용 (WSL 환경):")
    print("   - build-godot-linux")
    print("   - autoci (Linux Godot 자동 실행)")
    
    return 1

if __name__ == "__main__":
    sys.exit(main())